<view>
    <swiper indicator-dots="{{true}}" autoplay="{{true}}" interval="{{5000}}" duration="{{500}}" bindchange="bindchange">
        <swiper-item>
            <image class="swiper" src="/images/post/post-1@text.jpg" />
        </swiper-item>
        <swiper-item>
            <image class="swiper" src="/images/post/post-2@text.jpg" />
        </swiper-item>
        <swiper-item>
            <image class="swiper" src="/images/post/post-3@text.jpg" />
        </swiper-item>
        <!-- <block wx:for="{{imgUrls}}">
            <swiper-item>
                <image class="swiper-image" src="{{item}}" />
            </swiper-item>
        </block> -->
    </swiper>
    <block wx:for="{{postList}}" wx:for-item="item" wx:for-index="idx">
        <view class="post-container">
            <view class="post-author-date">
                <image src="{{item.avatar}}" />
                <text>{{item.object.date}}</text>
            </view>
            <text class="post-title">{{idx + 1}}:{{item.title}}</text>
            <image class="post-image" src="{{item.postImg}}" mode="aspectFill" />
            <text class="post-content">{{item.content}}</text>
            <view class="post-like">
                <image src="/images/icon/wx_app_collect.png" />
                <text>{{item.collectionNum.array[0]}}</text>
                <image src="/images/icon/wx_app_view.png" />
                <text>{{item.readingNum}}</text>
                <image src="/images/icon/wx_app_message.png" />
                <text>{{item.commentNum}}</text>
            </view>
        </view>
    </block>
</view>
